doctype html
html(lang="en" dir="ltr")
  head
    meta(charset="utf-8")
    link(rel="stylesheet" href="css/styles.css")
    script(src="https://kit.fontawesome.com/f349cd4f76.js" crossorigin="anonymous")
    title= title
  body
    .header
      .right
        a(href="/home") HOME
      .left
        if user
          a.btn(href="/logout") EXIT
        else
          a.signup.btn(href="/signup") SIGNUP
          a.signin.btn(href="/signin") SIGNIN
    block body
